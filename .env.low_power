# Оптимизированные настройки для слабого VPS
# Профиль: low_power

# Основные настройки
VPS_PROFILE=low_power
MAX_CONCURRENT_REQUESTS=2
REQUEST_TIMEOUT=25
BATCH_SIZE=3

# Интервалы проверки (в минутах)
MIN_CHECK_INTERVAL=30
MAX_CHECK_INTERVAL=2880
DEFAULT_CHECK_INTERVAL=720

# Кэширование
CACHE_TTL_HOURS=4
CACHE_MAX_SIZE_MB=10

# Логирование
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true

# Уведомления
ENABLE_TELEGRAM_NOTIFICATIONS=true

# Управление ресурсами
MEMORY_THRESHOLD_MB=75
