# Оптимизированные настройки для слабого VPS
# Профиль: medium_power

# Основные настройки
VPS_PROFILE=medium_power
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=20
BATCH_SIZE=5

# Интервалы проверки (в минутах)
MIN_CHECK_INTERVAL=15
MAX_CHECK_INTERVAL=1440
DEFAULT_CHECK_INTERVAL=360

# Кэширование
CACHE_TTL_HOURS=2
CACHE_MAX_SIZE_MB=10

# Логирование
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true

# Уведомления
ENABLE_TELEGRAM_NOTIFICATIONS=true

# Управление ресурсами
MEMORY_THRESHOLD_MB=100
