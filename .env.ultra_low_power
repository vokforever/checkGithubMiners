# Оптимизированные настройки для слабого VPS
# Профиль: ultra_low_power

# Основные настройки
VPS_PROFILE=ultra_low_power
MAX_CONCURRENT_REQUESTS=1
REQUEST_TIMEOUT=30
BATCH_SIZE=2

# Интервалы проверки (в минутах)
MIN_CHECK_INTERVAL=60
MAX_CHECK_INTERVAL=4320
DEFAULT_CHECK_INTERVAL=1440

# Кэширование
CACHE_TTL_HOURS=6
CACHE_MAX_SIZE_MB=10

# Логирование
LOG_LEVEL=WARNING
ENABLE_FILE_LOGGING=false

# Уведомления
ENABLE_TELEGRAM_NOTIFICATIONS=false

# Управление ресурсами
MEMORY_THRESHOLD_MB=50
